
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="15000px"
    tools:gridSpec="1|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r"
    
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="15000px">

  


            <Button
                android:text="Page 1"
                android:layout_width="300px"
                android:layout_height="150px"
                android:id="@+id/buttonToPage2"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:background="#FF0000"
             />

            <Button
                android:text="Page 2"
                android:layout_width="300px"
                android:layout_height="150px"
                android:layout_below="@id/buttonToPage2"
                android:id="@+id/buttonToPage3"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:background="#00ff00"
             />
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/test"
                android:layout_width="1500px"
                android:layout_height="2000px"
                android:id="@+id/imageView2"       
                android:layout_weight="8"
                android:layout_marginTop="50px"
            />


            


        </RelativeLayout>
    </ScrollView>
</FrameLayout>
